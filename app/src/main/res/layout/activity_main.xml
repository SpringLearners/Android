<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin_left"
    android:paddingRight="@dimen/activity_horizontal_margin_right"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    tools:context="com.beti.teacher.best.restandroid.presentation.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="42dp"
        android:id="@+id/messageLengthField" />

    <TextView
        android:text="@string/count_to_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/messageLengthField"
        android:layout_alignStart="@+id/messageLengthField"
        android:layout_marginTop="14dp"
        android:id="@+id/lengthInput"
        />

    <TextView
        android:text="@string/generated_message_label_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generate_button"
        android:layout_alignLeft="@+id/messageLengthField"
        android:layout_alignStart="@+id/messageLengthField"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="44dp"
        android:id="@+id/generationMessageLabel" />

    <Button
        android:text="@string/generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generate_button"
        android:onClick="processRestRequest"
        android:layout_alignBaseline="@+id/messageLengthField"
        android:layout_alignBottom="@+id/messageLengthField"
        android:layout_toRightOf="@+id/messageLengthField" />

    <TextView
        android:text="@string/generated_message_label_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView"
        android:layout_below="@+id/generationMessageLabel"
        android:layout_alignLeft="@+id/generationMessageLabel"
        android:layout_alignStart="@+id/generationMessageLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:id="@+id/generatedMessage"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postGeneratedMessage"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/generatedMessage"
        android:layout_alignStart="@+id/generatedMessage" />
</RelativeLayout>
